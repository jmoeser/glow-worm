# Database — SQLite path for local dev; change for production deployment
DATABASE_URL=sqlite:///./glow-worm.db

# Secret key for session signing and CSRF tokens (REQUIRED — app will not start without this)
# Generate one with: python -c "import secrets; print(secrets.token_urlsafe(48))"
SECRET_KEY=change-me-to-a-random-string-of-at-least-32-characters

# Set to false for local HTTP development (default: true)
SECURE_COOKIES=false

# Comma-separated list of allowed CORS origins (leave empty to disable CORS)
ALLOWED_ORIGINS=

# Timezone for date calculations
TIMEZONE=Australia/Brisbane
